{% extends 'tabs_bootstrap4.html.twig' %}

{% block titre %}Mise en forme de l'actualité{% endblock %}
{% block page_title %} Modification de l'actualité{% endblock %}
{% block corps %}
    <div class="bgc-white p-20 bd">
        <h6 class="c-grey-900">Mise en forme avec wordpress Plug-in</h6>
        <div class="mT-30">
            <form>

                <div class="form-row"><div class="form-group col-md-8">
                        <img src="{{ asset('cover_image.jpg') }}" class="rounded float-left" alt="..." width="600" height="200"/>

                    </div>

                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <button type="button" class="btn cur-p btn-info float-right">Modifier..</button>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="inputEmail4">Titre</label>
                        <input type="email" class="form-control" id="inputEmail4" placeholder="Titre">
                    </div>
                </div>

                <div class="form-group">
                    <label for="exampleTextarea">Description</label>
                    <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-12">
                        <div class="gap-10 peers float-lg-right">
                            <div class="peer"><button type="button" class="btn cur-p btn-primary">Valider</button></div>
                        </div>
                    </div>
                </div>

                {#Une fois on clique sur le bouton suivant ,l'onglet 2 sera activé#}
            </form>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script>
        $(function(){

            var tab = 1;

            $('#suivant').click(function(e){
                e.preventDefault();
                if(tab>3){
                    tab = 1;
                }else{
                    tab++;
                }
                $('#myTab .nav-item a[href="#'+tab+'"]').tab('show');
            });

        });
    </script>
{% endblock %}
