{% block javascripts %}
    <script>
        $(function(){

            var tab = 1;

            $('#suivant').click(function(e){
                e.preventDefault();
                if(tab>3){
                    tab = 1;
                }else{
                    tab++;
                }
                $('#myTab .nav-item a[href="#'+tab+'"]').tab('show');
            });

